<div>
  <p>
    <strong>Name:</strong>
    <%= @restaurant.name %>
  </p>

  <p>
    <strong>Address:</strong>
    <%= @restaurant.address %>
  </p>

  <p>
    <strong>Category:</strong>
    <%= @restaurant.category %>
  </p>

  <%= link_to 'New review', new_restaurant_review_path(restaurant) %>

  <div class="reviews">
    <ul>
      <% restaurant.reviews.each do |review| %>
        <li><%= review.created_at&.strftime("%d %m %y") %> - <%= review.content %> <%= link_to "delete review", review_path(review), data: { turbo_method: :delete, turbo_confirm: "Are you sure ?" } %></li>
      <% end %>
    </ul>
  </div>
</div>
